{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@validators": ["../validators/src/index.ts"],
      "@validators/*": ["../validators/src/*"],
      "@db": ["../db/src/index.ts"],
      "@db/*": ["../db/src/*"]
    }
  }
}
