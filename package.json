{
  "name": "turbo-app",
  "private": true,
  "type": "module",
  "packageManager": "npm@10",
  "engines": { "node": ">=22" },
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "changeset": "changeset",
    "version-packages": "changeset version && npm install --no-fund --no-audit"
  },
  "devDependencies": {
    "turbo": "2.5.6",
    "typescript": "5.9.2",
    "vitest": "3.2.4",
    "tsx": "4.20.5",
    "eslint": "9.35.0",
    "@eslint/js": "9.35.0",
    "typescript-eslint": "8.44.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "prettier": "3.6.2",
    "@changesets/cli": "2.29.7"
  }
}
